{
  "env": {
    "es6": true,
    "node": true,
    "builtin": true
  },
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "script",
    "ecmaFeatures": {
      "arrowFunctions": true,
      "experimentalObjectRestSpread": true
    }
  },
  "globals": {},
  "extends": ["eslint:recommended"],
  "plugins": [
    "prettier"
  ],
  "settings": {
    "lodash": {
      "pragma": "_",
      "version": 4
    }
  },
  "rules": {
    // Possible Errors
    "no-extra-semi": "off",
    "no-empty": [
      "error",
      {
        "allowEmptyCatch": true
      }
    ],
    "no-extra-parens": "off", // let prettier handle it
    "no-irregular-whitespace": [
      "error",
      {
        "skipComments": true,
        "skipRegExps": true,
        "skipTemplates": true
      }
    ],
    "no-unsafe-finally": "error",
    "valid-jsdoc": [
      "warn",
      {
        "requireReturn": false,
        "requireReturnType": false,
        "requireParamDescription": false,
        "requireReturnDescription": false
      }
    ],
    "no-console": "off",
    // Best Practices
    "array-callback-return": "error",
    "block-scoped-var": "error",
    "curly": ["error", "multi-line"],
    "dot-notation": [
      "error",
      {
        "allowKeywords": true
      }
    ],
    "eqeqeq": [
      "warn",
      "allow-null"
    ],
    "guard-for-in": "error",
    "no-else-return": "error",
    "no-empty-function": "error",
    "no-eval": "error",
    "no-extend-native": "warn",
    "no-floating-decimal": "error",
    "no-implicit-coercion": [
      "error",
      {
        "string": false
      }
    ],
    "no-loop-func": "error",
    "no-multi-str": "error",
    "no-proto": "error",
    "no-sequences": "error",
    "no-with": "error",
    "wrap-iife": "off",
    "default-case": [
      "warn",
      {
        "commentPattern": "^skip\\sdefault"
      }
    ],
    "dot-location": "off", // let prettier handle it
    "no-alert": "error",
    "no-caller": "error",
    "no-extra-bind": "error",
    "no-implied-eval": "error",
    "no-invalid-this": "warn",
    "no-iterator": "error",
    "no-labels": "error",
    "no-new-func": "error",
    "no-new-wrappers": "error",
    "no-param-reassign": "error",
    "no-return-assign": "error",
    "no-script-url": "error",
    "no-self-compare": "error",
    "no-throw-literal": "error",
    "no-unmodified-loop-condition": "error",
    "no-unused-expressions": ["error", {"allowShortCircuit": true}],
    "no-useless-call": "error",
    "no-useless-concat": "error",
    "no-useless-escape": "error",
    "no-void": "off",
    "radix": "error",
    "yoda": "error",
    // Strict Mode
    "strict": [
      "error",
      "global"
    ],
    // Variables
    "no-shadow": [
      "error",
      {
        "builtinGlobals": true
      }
    ],
    "no-unused-vars": [
      "error",
      {
        "varsIgnorePattern": "[iI]gnore",
        "caughtErrors": "all",
        "caughtErrorsIgnorePattern": "^ignore",
        "argsIgnorePattern": "next"
      }
    ],
    "no-use-before-define": [
      "error",
      {
        "functions": false,
        "classes": true
      }
    ],
    "no-delete-var": "error",
    "no-shadow-restricted-names": "error",
    "no-undef-init": "error",
    "no-undefined": "error",
    // Node.js and CommonJS
    "no-path-concat": "error",
    // Stylistic Issues
    "block-spacing": "off", // let prettier handle it
    "camelcase": [
      "warn",
      {
        "properties": "never"
      }
    ],
    "comma-style": "off", // let prettier handle it
    "eol-last": "off", // let prettier handle it
    "indent": "off", // let prettier handle it
    "linebreak-style": [
      "error",
      "unix"
    ],
    "max-len": [
      "warn",
      {
        "code": 120,
        "comments": 120,
        "ignoreUrls": true
      }
    ],
    "new-cap": [
      "warn",
      {
        "capIsNew": true
      }
    ],
    "no-bitwise": "error",
    "no-lonely-if": "warn",
    "no-multiple-empty-lines": "off", // let prettier handle it
    "no-new": "error",
    "quotes": [
      "warn",
      "single",
      { "avoidEscape": true }
    ],
    "require-jsdoc": [
      "warn",
      {
        "require": {
          "FunctionDeclaration": true,
          "MethodDefinition": true,
          "ClassDeclaration": true
        }
      }
    ],
    "semi": "off", // let prettier handle it
    "callback-return": ["error", ["callback", "cb", "done"]],
    "handle-callback-err": "error",
    "no-mixed-requires": [
      "error",
      {
        "grouping": true
      }
    ],
    "no-new-require": "error",
    "array-bracket-spacing": "off", // let prettier handle it
    "brace-style": "off", // let prettier handle it
    "comma-dangle": "off", // let prettier handle it
    "comma-spacing": "off", // let prettier handle it
    "computed-property-spacing": "off", // let prettier handle it
    "consistent-this": [
      "error",
      "self"
    ],
    "func-names": "error",
    "func-style": [
      "error",
      "declaration",
      {
        "allowArrowFunctions": true
      }
    ],
    "id-length": [
      "warn",
      {
        "exceptions": [
          "_"
        ]
      }
    ],
    "max-depth": [
      "error",
      6
    ],
    "max-lines": [
      "error",
      {
        "max": 300,
        "skipBlankLines": true,
        "skipComments": true
      }
    ],
    "max-nested-callbacks": "error",
    "max-params": [
      "error",
      6
    ],
    "max-statements-per-line": "error",
    "new-parens": "off", // let prettier handle it
    "newline-per-chained-call": "off", // let prettier handle it
    "no-array-constructor": "error",
    "no-mixed-operators": [
      "error",
      {
        "allowSamePrecedence": true
      }
    ],
    "no-mixed-spaces-and-tabs": "off", // let prettier handle it
    "no-new-object": "error",
    "no-spaced-func": "off", // let prettier handle it
    "no-trailing-spaces": "off", // let prettier handle it
    "no-unneeded-ternary": "error",
    "no-whitespace-before-property": "off", // let prettier handle it
    "operator-assignment": [
      "error",
      "always"
    ],
    "quote-props": "off", // let prettier handle it
    "space-unary-ops": "off", // let prettier handle it
    "spaced-comment": [
      "error",
      "always",
      {
        "exceptions": [
          "-+",
          "-",
          "*",
          "-+"
        ]
      }
    ],
    "wrap-regex": "off", // let prettier handle it
    // ECMAScript 6
    "arrow-body-style": [
      "error",
      "as-needed"
    ],
    "arrow-parens": "off", // let prettier handle it
    "arrow-spacing": "off", // let prettier handle it
    "generator-star-spacing": "off", // let prettier handle it
    "no-confusing-arrow": "off", // let prettier handle it
    "no-duplicate-imports": [
      "error",
      {
        "includeExports": true
      }
    ],
    "no-useless-computed-key": "error",
    "no-useless-constructor": "error",
    "no-useless-rename": "error",
    "no-var": "warn",
    "object-shorthand": [
      "error",
      "always"
    ],
    "prefer-arrow-callback": "error",
    "prefer-const": "warn",
    "prefer-reflect": "off",
    "prefer-rest-params": "warn",
    "prefer-spread": "warn",
    "prefer-template": "error",
    "template-curly-spacing": ["error", "never"],
    "require-yield": "error",
    // Prettier rules
    "prettier/prettier": [
      "error", {
          "trailingComma": "none",
          "singleQuote": true,
          "printWidth": 90,
          "tabWidth": 4
        }
      ]
  }
}
