{
  "env": {
    "es6": true,
    "node": true,
    "builtin": true,
    "jest": true,
    "jest/globals": true
  },
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "ecmaFeatures": {
      "arrowFunctions": true,
      "experimentalObjectRestSpread": false
    }
  },
  "plugins": [
    "jest"
  ],
  "extends": ["plugin:jest/recommended"],
  "rules": {
    "id-length": ["warn", { "exceptions": ["_"] }]
  }
}
